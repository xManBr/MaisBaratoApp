<h2>Produto</h2>

@using (Html.BeginForm("Search", "Maisbarato", "search"))

{
    @Html.Hidden("latitude")
    @Html.Hidden("longitude")

    <div class="row">
        <div class="col-md-12">
            @Html.TextBox("searchProduct", null, new { @class = "form-control" })
            <br />
            <input class="btn btn-info btn-lg" type="submit" value="Procurar onde está mais barato" />
        </div>
    </div>
}


<div class="row">
    <div class="col-md-12">
        <hr />
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        var link = "https://cosmos.bluesoft.com.br/produtos/" + item.Sku;

        int width = 160;
        int height = 160;
        var thisPicture = System.Convert.ToBase64String(ImageUtility.ResizeImage2(item.Picture, ref width, ref height));
        /*
        ExifStuff.ExifOrientations orientation =
                  ExifStuff.ImageOrientationFromArray(item.Picture);
        */
        <div class="col-md-4">
            <br />
            <input style="min-width:50px; min-height:25px;" value="Denunciar" type="button" id="btnComplaint@(item.ProductId)" onclick="Complaint(@item.ProductId, 'btnComplaint@(item.ProductId)');" />
            <br />

            @if (item.VirtualPath != string.Empty)
            {
                <a href='@Url.Action("PriceList", "Maisbarato",  new { sku = item.Sku, latitude= ViewBag.latitude, longitude = ViewBag.longitude })'>
                    <img src="@(ViewBag.PathRoot + item.VirtualPath)" width="@(width)" height="@(height)" title="Produto" alt="@(Config.IMG_EM_PROCESSAMENTO)" />
                </a>
            }
            else
            {
                <a href='@Url.Action("PriceList", "Maisbarato", new { sku = item.Sku, latitude= ViewBag.latitude, longitude = ViewBag.longitude })'>
                    <img src="" title="Produto" alt="@(Config.IMG_EM_PROCESSAMENTO)" />
                </a>
            }
            <br />
            @Html.DisplayFor(modelItem => item.Name)
            <br />
            @if (ValidationCode.BarCode(ViewBag.Sku))
            {
                @Html.DisplayFor(modelItem => item.Sku)
            }
            <br />
            @Html.ActionLink("Lista de Preços", "PriceList", new { sku = item.Sku, latitude = ViewBag.latitude, longitude = ViewBag.longitude })

            @if (item.Complained)
            {
                <script>
                var thisElement = "btnComplaint@(item.ProductId)";
                document.getElementById(thisElement).disabled = true;
                document.getElementById(thisElement).setAttribute('value', 'Denunciado');
                document.getElementById(thisElement).style.setProperty("color", "white");
                document.getElementById(thisElement).style.setProperty("background-color", "rgb(255, 99, 71)");
                </script>
            }
        </div>
    }

</div>

