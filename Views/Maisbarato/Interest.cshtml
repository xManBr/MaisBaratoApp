@{
    bool mapDone = false;
}

@Html.Hidden("latitude")
@Html.Hidden("longitude")




@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>
    <div class="row">

        @if ((!mapDone) && (item.LatLng != String.Empty) && (item.LatLng != "0,0"))
        {
            mapDone = true;
            var Lat = "0";
            var Lng = "0";
            var latLngs = item.LatLng.Split(',');
            if (latLngs.Length > 1)
            {
                if (latLngs[0].Trim() != "0")
                {
                    Lat = latLngs[0];
                    Lng = latLngs[1];
                }
            }
            <div class="col-md-4">
                <div id="map" class="col-md-4" style="width:300px;height:300px"> </div>
            </div>

            <script>
                    var map;
                        function initMap() {
                            map = new google.maps.Map(document.getElementById('map'), {
                                center: { lat: @(Lat), lng: @(Lng) },
                                zoom: 15
                            });
                            var marker = new google.maps.Marker({
                                position: { lat: @(Lat), lng: @(Lng) },
                                map: map
                            });
                        }

            </script>

        }
        else
        {
            <div class="col-md-4">
                @Html.ActionLink("Origem do Interesse", "InterestLocal", new { latLng = item.LatLng, s = item.Interesse })
            </div>
        }

        <div class="col-md-2">
            @Html.DisplayFor(modelItem => item.CreationDateView)
        </div>

        <div class="col-md-4">
            @Html.DisplayFor(modelItem => item.Interesse)
        </div>

        <div class="col-md-2">
            <input style="min-width:50px; min-height:25px;" value="Denunciar" type="button" id="btnComplaint@(item.Id)" onclick="Complaint(@item.Id, 'btnComplaint@(item.Id)');" />
        </div>

        @if (item.Complained)
        {
            <script>
                var thisElement = "btnComplaint@(item.Id)";
                document.getElementById(thisElement).disabled = true;
                document.getElementById(thisElement).setAttribute('value', 'Denunciado');
                document.getElementById(thisElement).style.setProperty("color", "white");
                document.getElementById(thisElement).style.setProperty("background-color", "rgb(255, 99, 71)");
            </script>
        }


    </div>
}

