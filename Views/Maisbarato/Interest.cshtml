        function Complaint(id, thisElement) {

            try {
                getLocation();
                var coord = $('#latitude').val() + ',' + $('#longitude').val();
            }
            catch (ex) {
                var coord = '0,0';
            }

            $.ajax({

                url: '@(ViewBag.UrlCompaint)', type: "POST", dataType: "json",
                data: { latLng: coord, productId: 0, storeId: 0, sourceIP: "@(ViewBag.IP)", interestId: id }

            })

            document.getElementById(thisElement).disabled = true;
            document.getElementById(thisElement).setAttribute('value', 'Denunciado');
            document.getElementById(thisElement).style.setProperty("color", "white");
            document.getElementById(thisElement).style.setProperty("background-color", "rgb(255, 99, 71)");

